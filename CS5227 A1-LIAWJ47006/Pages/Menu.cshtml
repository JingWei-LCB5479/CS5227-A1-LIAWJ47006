@page
@model CS5227_A1_LIAWJ47006.Pages.MenuModel

@{
    ViewData["Title"] = "Menu";
}

<section class="product" id="product">
    <div class="heading">
        <h2>Our Menu</h2>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">
            @Model.ErrorMessage
        </div>
    }

    <h2>Appetizers</h2>
    <div class="swiper product-row">
        <div class="swiper-wrapper">
            @foreach (var menu in Model.Appetizers)
            {
                <div class="swiper-slide box">
                    <div class="img">
                        <img src="~/images/@menu.ImageUrl" alt="@menu.Name">
                    </div>
                    <div class="product-content">
                        <h3>@menu.Name</h3>
                        <p>@menu.Description</p>
                        <p>Price: @menu.Price.ToString("C")</p>
                        <div class="orderNow">
                            <form method="post" asp-page-handler="AddToCart" asp-route-id="@menu.Id">
                                <button type="submit" class="btn btn-primary">Add to Cart</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="swiper-pagination"></div>
    </div>

