@page
@model CS5227_A1_LIAWJ47006.Pages.Admin.UserRolesModel

@{
    ViewData["Title"] = "User Roles Management";
    Layout = "_Layout";
}

<div class="container">
    <h1>User Roles Management</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Roles</th>
                <th>Add Role</th>
                <th>Remove Role</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var userRole in Model.UserRoles)
            {
                <tr>
                    <td>@userRole.Email</td>
                    <td>
                        @foreach (var role in userRole.Roles)
                        {
                            <span class="badge badge-primary">@role</span>
                        }
                    </td>
                    <td>
                        <form method="post" asp-page-handler="AddRole">
                            <input type="hidden" name="userId" value="@userRole.UserId" />
                            <input type="text" name="roleName" placeholder="Role Name" class="form-control" />
                            <button type="submit" class="btn btn-sm btn-success">Add</button>
                        </form>
                    </td>
                    <td>
                        <form method="post" asp-page-handler="RemoveRole">
                            <input type="hidden" name="userId" value="@userRole.UserId" />
                            <input type="text" name="roleName" placeholder="Role Name" class="form-control" />
                            <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
