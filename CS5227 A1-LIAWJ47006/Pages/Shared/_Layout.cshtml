<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Savanna Bites</title>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header class="header">
        <div class="logoContent">
            <a href="/" class="logo"><img src="~/images/logo.png" alt="Savanna Bites"></a>
            <h1 class="logoName">Savanna Bites</h1>
        </div>
        <nav class="navbar">
            <a asp-page="/Index">Home</a>
            <a asp-page="/Menu">Menu</a>
            <a asp-page="/Contact">Contact</a>
            <a asp-page="/Review">Review</a>
        </nav>
        <div class="icon">
            <i class="fas fa-search" id="search"></i>
            <i class="fas fa-bars" id="menu-bar"></i>
        </div>
        <div class="search">
            <input type="search" placeholder="search...">
        </div>
    </header>

    <div class="container">
        @RenderBody()
    </div>

    <footer class="footer" id="contact">
        <div class="box-container">
            <div class="mainBox">
                <div class="content">
                    <a href="#"><img src="~/images/logo.png" alt="Savanna Bites"></a>
                    <h1 class="logoName">Savanna Bites</h1>
                </div>
                <p>Delicious Ugandan cuisine with Brunei pricing. Come and enjoy!</p>
            </div>
            <div class="box">
                <h3>Quick Links</h3>
                <a href="#"> <i class="fas fa-arrow-right"></i>Home</a>
                <a href="#"> <i class="fas fa-arrow-right"></i>Menu</a>
                <a href="#"> <i class="fas fa-arrow-right"></i>Contact</a>
                <a href="#"> <i class="fas fa-arrow-right"></i>Review</a>
            </div>
            <div class="box">
                <h3>Contact Info</h3>
                <a href="#"> <i class="fas fa-phone"></i> +673 123 4567</a>
                <a href="#"> <i class="fas fa-envelope"></i> info@savannabites.com</a>
            </div>
        </div>
        <div class="share">
            <a href="#" class="fab fa-facebook-f"></a>
            <a href="#" class="fab fa-twitter"></a>
            <a href="#" class="fab fa-instagram"></a>
            <a href="#" class="fab fa-linkedin"></a>
            <a href="#" class="fab fa-pinterest"></a>
        </div>
        <div class="credit">
            created by <span>Your Name</span> | all rights reserved
        </div>
    </footer>

    <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    <script src="~/js/index.js"></script>
</body>
</html>
