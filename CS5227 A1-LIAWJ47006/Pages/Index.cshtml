@page
@model CS5227_A1_LIAWJ47006.Pages.IndexModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="jumbotron text-center my-4">
        <img src="~/images/Savanna_Bites_Logo.jpg" class="img-fluid mb-3" alt="Savanna Bites Logo" style="max-width: 300px;">
        <p class="lead">Experience the taste of authentic Ugandan cuisine right here in Bandar Seri Begawan!</p>
        <hr class="my-4">
        <p>Explore our diverse menu and enjoy special promotions!</p>
        <a class="btn btn-primary btn-lg" href="/Menu" role="button">View Menu</a>
    </div>

    <div class="text-center mb-4">
        <span class="badge badge-warning" style="font-size: 1.2em;">Special Promotions</span>
    </div>

    <div id="promoCarousel" class="carousel slide mb-4" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row">
                    <div class="col-md-6">
                        <img src="~/images/Promotion 3.jpeg" class="d-block w-100" alt="Promo 1">
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="carousel-caption bg-dark text-white p-3 rounded">
                            <h5>Special Promotion 1</h5>
                            <p>Get 20% off on all appetizers every Monday!</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="row">
                    <div class="col-md-6">
                        <img src="~/images/Promotion 2.jpeg" class="d-block w-100" alt="Promo 2">
                    </div>
                    <div class="col-md-6 d-flex align-items-center">
                        <div class="carousel-caption bg-dark text-white p-3 rounded">
                            <h5>Special Promotion 2</h5>
                            <p>Enjoy a free dessert with every main course on Fridays!</p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Add more carousel items as needed -->
        </div>
        <a class="carousel-control-prev" href="#promoCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#promoCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <h2 class="my-4">Featured Dishes</h2>
    <div class="row">
        @foreach (var menu in Model.Menus)
        {
            <div class="col-md-4 d-flex align-items-stretch">
                <div class="card mb-4 shadow-sm">
                    <img src="~/images/@menu.ImageUrl" class="card-img-top" alt="@menu.Name">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@menu.Name</h5>
                        <p class="card-text flex-grow-1">@menu.Description</p>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <div class="btn-group">
                                <a href="/Menu" class="btn btn-sm btn-outline-secondary">View</a>
                                <form method="post" asp-page-handler="AddToCart" asp-route-id="@menu.Id">
                                    <button type="submit" class="btn btn-sm btn-outline-secondary">Buy</button>
                                </form>
                            </div>
                            <small class="text-muted">@menu.Price.ToString("C")</small>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="my-4 text-center">
        <a href="/Menu" class="btn btn-success btn-lg">Explore Full Menu</a>
    </div>
</div>

<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

