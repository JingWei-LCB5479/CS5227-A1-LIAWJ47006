@page
@model CS5227_A1_LIAWJ47006.Pages.Admin.CreateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Create Menu Item";
    Layout = "_Layout";
}

<div class="container">
    <h1>Create Menu Item</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="MenuViewModel.Name" class="control-label"></label>
            <input asp-for="MenuViewModel.Name" class="form-control" />
            <span asp-validation-for="MenuViewModel.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MenuViewModel.Description" class="control-label"></label>
            <textarea asp-for="MenuViewModel.Description" class="form-control"></textarea>
            <span asp-validation-for="MenuViewModel.Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MenuViewModel.Price" class="control-label"></label>
            <input asp-for="MenuViewModel.Price" class="form-control" />
            <span asp-validation-for="MenuViewModel.Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MenuViewModel.Category" class="control-label"></label>
            <select asp-for="MenuViewModel.Category" class="form-control">
                <option value="Appetizers">Appetizers</option>
                <option value="Main Courses">Main Courses</option>
                <option value="Side Dishes">Side Dishes</option>
                <option value="Desserts">Desserts</option>
                <option value="Beverages">Beverages</option>
            </select>
            <span asp-validation-for="MenuViewModel.Category" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MenuViewModel.Image" class="control-label"></label>
            <input asp-for="MenuViewModel.Image" type="file" class="form-control" />
            <span asp-validation-for="MenuViewModel.Image" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Admin/Admin" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
